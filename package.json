{
  "name": "pongmmo",
  "version": "0.0.1",
  "description": "A MMO based on pong game's concepts",
  "main": "index.js",
  "scripts": {
    "client": "webpack-dev-server --hot --host=0.0.0.0 --port=3000 --content-base=./dist",
    "server": "npm-run-all --parallel watch:server watch:build",
    "watch:build": "webpack --watch --config webpack.config.server.js",
    "watch:server": "nodemon './dist/server.js' --watch './dist'",
    "lint": "eslint src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "vendors": "webpack --config webpack.config.vendors.js",
    "build": "NODE_ENV=production webpack && webpack --config webpack.config.server.js",
    "docker": "docker-compose up --build",
    "db": "docker run --rm -p \"28015:28015\" -p \"8080:8080\" rethinkdb"
  },
  "devDependencies": {
    "babel-core": "~6.14.0",
    "babel-eslint": "~6.1.2",
    "babel-loader": "~6.2.4",
    "babel-plugin-syntax-class-properties": "~6.13.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-class-properties": "~6.11.5",
    "babel-plugin-transform-object-rest-spread": "~6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2017": "^6.14.0",
    "babel-preset-react": "~6.11.1",
    "babel-preset-stage-0": "~6.5.0",
    "babel-register": "~6.14.0",
    "eslint": "^3.11.1",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "file-loader": "^0.9.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "webpack": "2.1.0-beta.26",
    "webpack-dev-server": "2.1.0-beta.11"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "matter-js": "^0.11.1",
    "pixi.js": "^4.0.3",
    "rethinkdb": "^2.3.3",
    "socket.io": "^1.5.0",
    "socket.io-client": "^1.7.1"
  }
}
